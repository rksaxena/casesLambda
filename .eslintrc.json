{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "max-len": ["error", {"code": 120,
                              "ignoreComments": true }
                   ],
        "import/no-extraneous-dependencies": 0,
        "no-param-reassign": 0,
        "no-unused-vars": ["error", {"args": "none"}],
        "operator-linebreak": ["error", "after"]
    }
}
